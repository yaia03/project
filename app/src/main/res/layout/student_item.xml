<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp">


    <TextView
        android:id="@+id/recycler_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_student_phone"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Новгородов Афоня"
        android:layout_marginStart="10dp"
        ></TextView>

    <TextView
        android:id="@+id/recycler_student_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_student_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="89142368054"
        android:layout_marginStart="10dp"
        ></TextView>




</androidx.constraintlayout.widget.ConstraintLayout>